{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    //"jsx": "react",
    "jsx": "preserve",
    "esModuleInterop": true,
    /*     "moduleResolution": "nodenext", */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*",
        "./i18n/*"
      ],
      "@i18n/*": [
        "./i18n/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
    /*  "types": ["service-worker"] */,
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/*.d.ts",
    "app/[locale]/api/auth/[...nextauth]/route.ts",
    "public/worker/index.js",
    "src/utils/chatStream.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
