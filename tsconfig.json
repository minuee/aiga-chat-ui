{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/serverActions/*": [
        "./app/api/serverActions/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["service-worker"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/*.d.ts", 
    "app/api/auth/[...nextauth]/route.ts",
    "public/worker/global.d.ts",
    "public/worker/index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
